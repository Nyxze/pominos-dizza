{% extends 'base.html.twig' %}

{% block title %} Pizza index{% endblock %}

{% block body %}
    <h1>Pizza index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Ingrédients</th>
            <th>Price</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for pizza in pizzas %}
            <tr>
                <td>{{ pizza.id }}</td>
                <td>{{ pizza.name }}</td>
                <td>
                    {% for toppings in pizza.toppings %}
                        {{ toppings.name }},
                    {% endfor %}
                </td>
                <td>
                    {{ pizza.price }}
                </td>
                <td>
                    <a href="{{ path('app_pizza_details', {'id': pizza.id}) }}">Détails</a>
                    <a href="{{ path('app_pizza_add', {'id': pizza.id}) }}">Ajouter au pannier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_pizza_new') }}">Create new</a>
{% endblock %}
